<div class="row justify-content-md-center mt-2">
  <div class="col col-md-11">
    <div class="card">
      <div class="card-header d-inline-flex justify-content-between">
          <div class="">
            <!-- # dummy div -->
          </div>
          <div class="">
            <h3 class="mb-0 text-center">List of all groups</h3>
          </div>
          <div class="">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addNewGroupModal">Add Group</button>
          </div>
      </div>
      <div class="card-body">
        <div class="card card-body p-0">
          <table class="table  table-hover">
            <col width="10%">
            <col>
            <col width="10%">
            <thead>
              <tr>
                <th scope="row">Group id</th>
                <th class="text-left">Group Name</th>
                <th class="text-left">Details</th>
              </tr>
            </thead>
            <tbody>
            <% @gps.each do |g|%>
                <tr>
                  <th scope="row"><%= g.id %></th>
                  <td class="text-left"><%= g.name %></td>
                  <td class="text-left"><a href="/groups/show/<%=g.id%>" class="btn btn-success btn-sm">Details </a></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal for adding new group -->
<div class="modal fade" id="addNewGroupModal" tabindex="-1" role="dialog" aria-labelledby="addNewGroupModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addNewGroupModalTitle">Add Member</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: "/groups/add", method: "post", :html => {class: "", role: "form", id: "add_mem_form"}  do  %>
        <div class="form-group">
          <%= label_tag(:name, "Group name:", class: "") %>
          <%= text_field_tag( :name, "", class: "form-control" )%>
        </div>
        <div class="form-group">
          <%= label_tag( :email, "Email of owner:", class: "" )%>
          <%= email_field_tag( :email, "" ,class: "form-control" )%>
        </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
        <input type="submit" name="commit" value="Create Group" class="btn btn-primary" data-disable-with="Please wait..." form="add_mem_form">
      </div>
    </div>
  </div>
</div>
