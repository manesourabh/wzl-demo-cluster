<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mt-4">
      <header class="card-header">
        <h4 class="card-title mt-2"> New Contract
          <a href="/contracts/" class="btn btn-primary float-right" role="button" aria-pressed="true">Back</a>
        </h4>
      </header>
      <div class="card-body">
        <%= form_with( url: "/contracts", html: { method: :post }) do |f| %>
          <div class="form-group row">
            <label for="contract_id" class="col-sm-4 col-form-label">Contract ID</label>
            <div class="col-sm-8">
              <%= f.text_field :contract_id, autofocus: true, autocomplete: "Contract ID", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="contract_name" class="col-sm-4 col-form-label">Contract Name</label>
            <div class="col-sm-8">
              <%= f.text_field :name, autofocus: true, autocomplete: "Contract Name", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="fvalue" class="col-sm-4 col-form-label">Target Value</label>
            <div class="col-sm-8">
              <%= f.text_field :fvalue, autofocus: true, autocomplete: "Target value", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="alatm" class="col-sm-4 col-form-label">Alarm</label>
            <div class="col-sm-8">
              <%= f.radio_button :alarm, true, :checked => true %>
              <%= f.label :alarm, 'Yes', :value => true, class: "pr-sm-3" %>
              <%= f.radio_button :alarm, false %>
              <%= f.label :alarm, 'No', :value => false %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :email, "Email address", class: "col-sm-4 col-form-label" %><br />
            <div class="col-sm-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", value: "dennis.marker@polierscheiben-spaeth.de", class: "form-control" %>
            </div>
          </div>
          <div class="actions form-group">
            <%= f.submit "Create", class: "btn btn-success btn-block" %>
          </div>
        <% end %>
      </div><!-- card-body.// -->
    </div> <!-- card.// -->
  </div> <!-- col.//-->
</div> <!-- row.//-->
